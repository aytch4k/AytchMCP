# AytchMCP Environment Variables

# Server Configuration
MCP_HOST=0.0.0.0
MCP_PORT=8808
LOG_LEVEL=INFO
DEBUG=false

# LLM API Keys
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here
OPENROUTER_API_KEY=your_openrouter_api_key_here
NINJACHAT_API_KEY=your_ninjachat_api_key_here

# LLM Model Selection
# For OpenRouter.ai, specify the model ID (e.g., openai/gpt-4-turbo, anthropic/claude-3-opus, meta-llama/llama-3-70b-instruct)
OPENROUTER_MODEL=openai/gpt-4-turbo
# For NinjaChat.ai, specify the model ID
NINJACHAT_MODEL=your_ninjachat_model_here

# Weather API Key (for weather tool)
OPENWEATHER_API_KEY=your_openweather_api_key_here

# Paths
CONFIG_PATH=./config
DOCS_PATH=./docs
PROMPTS_PATH=./prompts

# Branding
BRANDING_NAME=Aytch4K MCP
BRANDING_PRIMARY_COLOR=#4A90E2
BRANDING_SECONDARY_COLOR=#50E3C2